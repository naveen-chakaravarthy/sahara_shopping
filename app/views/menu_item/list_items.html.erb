<div class="row">
  <div class="col-9">
    <table id="example" class="table table-striped table-bordered" style="width: 1000px;">
      <thead>
      <th>Item Name</th>
      <th>Desc</th>
      <th>Price</th>
      <th>Category Name</th>
      <th>Created Date</th>
      <th>Action</th>
      </thead>
      <tbody>
      <% menu_items.each do |item| %>
        <tr>
          <td><%= item.name %></td>
          <td><%= item.description %></td>
          <td><%= item.price %></td>
          <td><%= item.menu_category.name %></td>
          <td><%= item.created_at %></td>
          <td>
            <%= link_to "", edit_menu_category_menu_item_path(id: item.id, menu_category_id: item.menu_category.id), class: "fa-solid fa-pen-to-square mx-2" %>
            <%= link_to "", menu_category_menu_item_path(id: item.id, menu_category_id: item.menu_category_id), class: "fa fa-trash", method: :delete %>
          </td>
        </tr>
      <% end %>

      </tbody>
    </table>
  </div>
  <div class="col-3">
    <br>
    <br>
    <br>
    <%= link_to "Create Menu Item", new_menu_category_menu_item_path(menu_category_id: 4), class: "btn btn-success btn-lg"%>
  </div>
</div>