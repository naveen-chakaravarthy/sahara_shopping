<!DOCTYPE html>
<html>
  <head>
    <title>Sahara - Online Shopping India</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
  <!-- Navbar -->
  <nav class="navbar navbar-expand-lg navbar-light bg-light">
    <!-- Container wrapper -->
    <div class="container-fluid">
      <!-- Toggle button -->
      <button
        class="navbar-toggler"
        type="button"
        data-mdb-toggle="collapse"
        data-mdb-target="#navbarSupportedContent"
        aria-controls="navbarSupportedContent"
        aria-expanded="false"
        aria-label="Toggle navigation"
      >
        <i class="fas fa-bars"></i>
      </button>

      <!-- Collapsible wrapper -->
      <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <!-- Navbar brand -->
        <a class="navbar-brand mt-2 mt-lg-0" href="#">
          <img
            src="https://banner2.cleanpng.com/20180330/rve/kisspng-electricity-computer-icons-symbol-company-electric-electric-5abdc00c68c5a8.0630823215223849084292.jpg"
            height="55"
            alt="MDB Logo"
            loading="lazy"
            />
        </a>
        <!-- Left links -->
        <ul class="navbar-nav me-auto mb-2 mb-lg-0">
          <% if @user and @user.user_type == 'customer' %>
          <li class="nav-item">
            <%= link_to "Home","/", class: "nav-link" %>
          </li>
          <li class="nav-item">
            <%= link_to "Shop", shop_index_path, class: "nav-link" %>
          </li>
          <li class="nav-item">
            <%= link_to "My Orders", orders_path, class: "nav-link" %>
          </li>
          <% elsif @user and @user.user_type == 'owner' %>
            <li class="nav-item">
              <%= link_to "Admin", admin_orders_path, class: "nav-link" %>
            </li>
            <li class="nav-item">
              <%= link_to "Add Category", menu_category_index_path, class: "nav-link" %>
            </li>
            <li class="nav-item">
              <%= link_to "Add Items", list_items_menu_category_index_path, class: "nav-link" %>
            </li>
            <li class="nav-item">
              <%= link_to "Shop", shop_index_path, class: "nav-link" %>
            </li>
            <li class="nav-item">
                <%= link_to "Admin", orders_path, class: "nav-link" %>
            </li>
          <% end %>

        </ul>
        <!-- Left links -->
      </div>
      <!-- Collapsible wrapper -->

      <!-- Right elements -->
      <div class="d-flex align-items-center">
        <!-- Avatar -->
        <% if @user %>
          <div class="user_bar" style="float: left">
            <%= @user.first_name.titleize %> &nbsp;&nbsp;
          </div>
          <div class="logout_bar">
            <%= link_to '', session_path(id: @user.id), method: 'delete', class: "fa fa-power-off" %> &nbsp;
          </div>
        <% end %>

      </div>
      <!-- Right elements -->
    </div>
    <!-- Container wrapper -->
  </nav>
  <div class="row mx-2 mt-4">
    <div class="row">
      <div class="col-12 text-center">
        <div class="text-success float-right">
          <% if flash[:info] %>
            <%= flash[:info] %>
          <% end %>
        </div>
        <div class="text-danger float-right">
          <% if flash[:error] %>
            <%= flash[:error] %>
          <% end %>
        </div>
      </div>
    </div>
    <%= yield %>
  </div>
  </body>
</html>
