<div class="container">
  <table id="example" class="table table-striped table-bordered" style="width: 1000px;">
    <thead>
    <th>OrderId</th>
    <th>Menu Name</th>
    <th>Date</th>
<!--    <th>Action</th>-->
    </thead>
    <tbody>
    <% OrderItem.my_order_items(order_id).each do |order| %>
      <tr>
        <td><%= order.id %></td>
        <td><%= order.menu_item_name %></td>
        <td><%= order.menu_item_price %></td>
<!--        <td> <%#= link_to "Order Details","/my_orders/#{order.id}", class: "" %> </td>-->
      </tr>
    <% end %>

    </tbody>
  </table>
</div>

<script type="text/javascript">
    $(document).ready(function() {
        $('#example').DataTable();
    });
</script>