<div class="container">
  <table id="example" class="table table-striped table-bordered" style="width: 1000px;">
    <thead>
    <th>OrderId</th>
    <th>Date</th>
    <th>User</th>
    <th>Status</th>
    <th>Action</th>
    </thead>
    <tbody>
    <% orders.each do |order| %>
      <tr>
        <td><%= order.id %></td>
        <td><%= order.date %></td>
        <td><%= order.user.first_name %></td>
        <td><%= order.status %></td>
        <td>
          <%= link_to "",order_order_item_index_path(order_id: order.id), class: "fa fa-eye" %>&nbsp;
          <% if order.status == 'delivered' %>
            <%= link_to "Mark as pending", set_status_order_path(id: order.id, status: "pending"), class: "", method: :post %>&nbsp;
          <% else %>
            <%= link_to "Mark as delivered", set_status_order_path(id: order.id, status: "delivered"), class: "", method: :post %>&nbsp;
          <% end %>
          <%= link_to "","#", class: "fa fa-trash" %>
        </td>
      </tr>
    <% end %>

    </tbody>
  </table>
</div>