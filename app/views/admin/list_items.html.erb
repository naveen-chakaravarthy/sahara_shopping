<div class="row">
  <div class="col-9">
    <table id="example" class="table table-striped table-bordered" style="width: 1000px;">
      <thead>
      <th>Item Name</th>
      <th>Desc</th>
      <th>Price</th>
      <th>Category Name</th>
      <th>Created Date</th>
      <th>Action</th>
      </thead>
      <tbody>
      <% MenuItem.all.each do |item| %>
        <tr>
          <td><%= item.name %></td>
          <td><%= item.description %></td>
          <td><%= item.price %></td>
          <td><%= item.menu_category.name %></td>
          <td><%= item.created_at %></td>
          <td>
            <%= link_to "","#", class: "fa fa-trash" %>
          </td>
        </tr>
      <% end %>

      </tbody>
    </table>
  </div>
  <div class="col-3">
    <br>
    <br>
    <br>
    <%= link_to "Create Menu Item", create_item_get_path, class: "btn btn-success btn-lg"%>
  </div>
</div>

<script type="text/javascript">
    $(document).ready(function() {
        $('#example').DataTable();
    });
</script>