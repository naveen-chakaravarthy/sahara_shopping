<div class="row">
  <div class="col-9">
    <table id="example" class="table table-striped table-bordered" style="width: 1000px;">
        <thead>
        <th>Category Name</th>
        <th>Created Date</th>
        <th>Action</th>
        </thead>
        <tbody>
        <% MenuCategory.all.each do |category| %>
        <tr>
            <td><%= category.name %></td>
            <td><%= category.created_at %></td>
            <td>
              <%= link_to "", delete_category_path(category: category), class: "fa fa-trash", method: :delete %>
            </td>
        </tr>
        <% end %>

        </tbody>
    </table>
  </div>
  <div class="col-3">
    <br>
    <br>
    <br>
    <%= link_to "Create Menu Category", create_category_get_path, class: "btn btn-success btn-lg"%>
  </div>
</div>

<script type="text/javascript">
    $(document).ready(function() {
        $('#example').DataTable();
    });
</script>