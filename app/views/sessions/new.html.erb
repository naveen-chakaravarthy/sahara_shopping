<div class="col-4"></div>
<div class="col-4">
  <h2>Please signin to continue</h2>
  <%= form_with url: sessions_path, methods: :post, class: 'form-control' do |form| %>
    <div>
      <%= form.label :email, "Enter user email", class: 'form-label' %>
      <%= form.email_field :email, class: 'form-input' %>
    </div>
    <div>
      <%= form.label :password, "Enter password", class: 'form-label' %>
      <%= form.password_field :password, class: 'form-input' %>
    </div>

    <%= form.submit "Submit", class: 'form-input' %>
  <% end %>
</div>

